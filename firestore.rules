rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // usersコレクションのルール
    match /users/{userId} {
      
      // ユーザー自身のデータにアクセスできるようにする
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // uploadvideosサブコレクションのルール
      match /uploadvideos/{videoId} {
        // ユーザー自身の動画にのみアクセス可能
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
